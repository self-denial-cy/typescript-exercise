{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "types": []
  },
  "ts-node": {
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext"
    }
  }
}
