{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "prompt": {
    "questions": {
      "type": {
        "enum": {
          "feat": {
            "emoji": "✨"
          },
          "fix": {
            "emoji": "🐛"
          },
          "docs": {
            "emoji": "📚"
          },
          "style": {
            "emoji": "💎"
          },
          "refactor": {
            "emoji": "📦"
          },
          "perf": {
            "emoji": "🚀"
          },
          "test": {
            "emoji": "🚨"
          },
          "build": {
            "emoji": "🔨"
          },
          "ci": {
            "emoji": "⚙️"
          },
          "chore": {
            "emoji": "♻️"
          },
          "revert": {
            "emoji": "⏪️"
          }
        }
      }
    }
  }
}
